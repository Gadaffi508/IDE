<Window x:Class="IDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        Title="Unity C# Editor"
        Height="700" Width="1200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="pack://application:,,,/Fonts/#JetBrainsMono-Bold">

    <Window.Resources>
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Ellipse Fill="{TemplateBinding Background}" Stroke="{TemplateBinding BorderBrush}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#1e1e1e" CornerRadius="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Özel Üst Bar -->
            <Border Grid.Row="0" Background="#2d2d30" MouseLeftButtonDown="WindowDragMove">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                        <Button Width="14" Height="14" Click="CloseWindow_Click"
                                Margin="4" Background="#FF5F56" BorderBrush="#FF5F56"
                                BorderThickness="1" Style="{StaticResource RoundButtonStyle}"/>
                        <Button Width="14" Height="14" Click="MinimizeWindow_Click"
                                Margin="4" Background="#FFBD2E" BorderBrush="#FFBD2E"
                                BorderThickness="1" Style="{StaticResource RoundButtonStyle}"/>
                        <Button Width="14" Height="14" Click="MaximizeWindow_Click"
                                Margin="4" Background="#27C93F" BorderBrush="#27C93F"
                                BorderThickness="1" Style="{StaticResource RoundButtonStyle}"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Ana İçerik -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sol Panel -->
                <Border Grid.Column="0" Background="#1e1e1e" Padding="10">
                    <StackPanel Orientation="Vertical">
                        <Button Content="Dosya Aç" Click="OpenFile_Click"
                                Background="#3c3c3c" Foreground="White"
                                Margin="0,0,0,10" Height="35"/>

                        <TextBlock Text="Son Açılanlar" Foreground="White" Margin="0,10,0,5"/>
                        <ListBox x:Name="RecentFilesList"
                                 Background="#2e2e2e"
                                 Foreground="White"
                                 BorderThickness="0"
                                 SelectionChanged="RecentFilesList_SelectionChanged"
                                 Height="500"/>
                    </StackPanel>
                </Border>

                <!-- Sekme Alanı -->
                <TabControl x:Name="EditorTabControl"
                            Grid.Column="1"
                            Background="#1e1e1e"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0"/>
            </Grid>
        </Grid>
    </Border>
</Window>
